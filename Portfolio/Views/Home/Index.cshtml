<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJmE8R7G6i9V8zD0P1T+jw+zXBow5OXcZV7zxJBBsqxw2lH5gFpmkH9x5ml6" crossorigin="anonymous">
    <title>@Model.Name - Profil</title>
</head>
<body>
    <!-- Profil Başlık ve Fotoğraf -->
    <div class="profile-header text-center py-5">
        <div class="profile-pic-container">
            <img src="@Model.ProfilePic" alt="Profile Picture" class="profile-pic" />
        </div>
        <h1 class="mt-3">@Model.Name</h1>
        <h2 class="mt-3">@Model.Job</h2>
        <p class="bio">@Model.Bio</p>
    </div>

    <!-- Kişisel Bilgiler -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="profile-section p-4 mb-4">
                    <h2 class="section-title text-center mb-4">Kişisel Bilgiler</h2>
                    <ul class="list-unstyled text-center">
                        <li class="mb-3"><strong>Email:</strong> @Model.Email</li>
                        <li class="mb-3"><strong>Konum:</strong> @Model.Location</li>
                        <li class="mb-3"><strong>Websitesi:</strong> <a href="@Model.Website" target="_blank" class="text-decoration-none">@Model.Website</a></li>
                    </ul>
                </div>

                <!-- Sosyal Medya -->
                <div class="profile-section p-3 mb-3">
                    <h2 class="section-title text-center mb-4">Sosyal Medya</h2>
                    <div class="social-icons d-flex justify-content-center">
                        @if (!string.IsNullOrEmpty(Model.GithubUrl))
                        {
                            <a href="@Model.GithubUrl" target="_blank" class="social-icon mx-3">
                                <i class="fa-brands fa-github fa-2x"></i>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
                        {
                            <a href="@Model.LinkedInUrl" target="_blank" class="social-icon mx-3">
                                <i class="fab fa-linkedin fa-2x"></i>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.InstagramUrl))
                        {
                            <a href="@Model.InstagramUrl" target="_blank" class="social-icon mx-3">
                                <i class="fab fa-instagram fa-2x"></i>
                            </a>
                        }
                        @if (!string.IsNullOrEmpty(Model.XUrl))
                        {
                            <a href="@Model.XUrl" target="_blank" class="social-icon mx-3">
                                <i class="fa-brands fa-x-twitter fa-2x"></i>
                            </a>
                        }
                    </div>
                </div>

                <!-- Hakkımda Kısmı -->
                <div class="profile-section p-4">
                    <h2 class="section-title text-center mb-4">Hakkımda</h2>
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">@Model.AboutMe</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS ve Icons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pzjw8f+ua7Kw1TIq0v8FqCQf6ggNw+fjf1zj5+JwYgFphuFY6YhR0dDxFcxtm6QJ" crossorigin="anonymous"></script>
</body>
</html>