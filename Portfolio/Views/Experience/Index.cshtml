@model IEnumerable<Experience>

<div class="container mx-auto px-4 py-8">
    <h2 class="text-4xl font-black text-center text-white-800 mb-8">İŞ-STAJ DENEYİMLERİM</h2>
    <div class="row">
        @foreach (var experience in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <!-- Şirket ve Pozisyon -->
                        <h5 class="card-title">@experience.JobTitle</h5>
                        <h6 class="card-subtitle mb-2">@experience.Company</h6>

                        <!-- Tarih Aralığı -->
                        <p class="card-text">
                            <i class="fas fa-calendar-alt me-2"></i>
                            @experience.StartDate.ToString("MMM yyyy") -
                            @(experience.EndDate.HasValue ? experience.EndDate.Value.ToString("MMM yyyy") : "Şu Anda")
                        </p>

                        <!-- Görevler ve Sorumluluklar -->
                        <div class="mt-3">
                            <h6>Görevler ve Sorumluluklar:</h6>
                            <p class="card-text">@experience.Responsibilities</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>