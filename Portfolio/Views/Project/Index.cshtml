@model IEnumerable<Project>

<div class="container mt-5">
    <!-- Başlık buraya taşındı -->
    <h1 class="text-4xl font-black text-center text-white-800 mb-20">PROJELERİM</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var project in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <!-- Proje Görseli (Opsiyonel) -->
                    <img src="~/images/prog.jpg" class="card-img-top" alt="@project.Title">
                    <div class="card-body d-flex flex-column">
                        <!-- Proje Başlığı -->
                        <h5 class="card-title text-center mb-3">@project.Title</h5>
                        <!-- Proje Açıklaması -->
                        <p class="card-text flex-grow-1">@project.Description</p>
                        <!-- Kullanılan Teknolojiler -->
                        <div class="mb-3">
                            <strong>Teknolojiler:</strong>
                            <div class="mt-2">
                                @foreach (var tech in project.Technologies.Split(','))
                                {
                                    <span class="badge me-1">@tech</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>