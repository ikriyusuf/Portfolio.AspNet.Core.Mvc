@model Experience

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="JobTitle"></label>
        <input asp-for="JobTitle" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Company"></label>
        <input asp-for="Company" class="form-control" rows="4" />
    </div>

    <div class="form-group my-3">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group my-3">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Responsibilities"></label>
        <textarea asp-for="Responsibilities" class="form-control" rows="4"></textarea>
    </div>


    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Deneyimler
            </a>
        </div>
    </div>
</form>