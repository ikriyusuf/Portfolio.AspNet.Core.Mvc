@model IEnumerable<Project>
@{
    Layout = "_Layout";
}
<div class="text-center my-5 border-bottom">
    <div class="display-6 text-primary">Proje Listesi</div>
</div>

<div class="text-center">
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-success" asp-controller="AdminHome" asp-action="Create">
            <i class="fa fa-plus"></i>
            Create
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-sm">
            <thead class="bg-info text-white">
                <tr>
                    <th>Proje ID</th>
                    <th>Proje Adı</th>
                    <th>Proje Tanımı</th>
                    <th>Proje Teknolojileri</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr class="table-light">
                        <td class="text-center">@project.Id</td>
                        <td>@project.Title</td>
                        <td>@project.Description</td>
                        <td>@project.Technologies</td>
                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Düzenle" class="btn btn-warning"
                                   asp-action="Update" asp-route-id="@project.Id">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Sil" class="btn btn-danger"
                                   asp-action="Delete" asp-route-id="@project.Id">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
